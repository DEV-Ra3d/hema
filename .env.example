# إعدادات مصنع البوتات
# Bot Factory Configuration

# توكن البوت الرئيسي (مطلوب)
BOT_TOKEN=your_bot_token_here

# معرف المالك (مطلوب)
OWNER_ID=your_telegram_user_id

# إعدادات قاعدة البيانات
DB_PATH=database.db

# إعدادات النظام
DEFAULT_LIMIT=3
MAX_BOTS_PER_USER=10

# إعدادات المراقبة
MONITOR_INTERVAL=300
HEALTH_CHECK_TIMEOUT=10

# إعدادات الإذاعة
BROADCAST_DELAY=0.1
MAX_BROADCAST_RETRIES=3

# إعدادات إضافية (اختيارية)
DEBUG=false
LOG_LEVEL=INFO
